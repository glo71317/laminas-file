<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="./vendor/squizlabs/php_codesniffer/phpcs.xsd">

    <!-- Paths to check -->
    <file>src</file>
    <file>test</file>
    <exclude-pattern>*/TestAsset/*</exclude-pattern>

    <!-- Include all rules from Laminas Coding Standard -->
    <rule ref="LaminasCodingStandard">
        <!--
        declare(strict_types=1) is too risky for a security-only component,
        and should only be reconsidered once this package receives new feature work.
        -->
        <exclude name="SlevomatCodingStandard.TypeHints.DeclareStrictTypes.DeclareStrictTypesMissing"/>
    </rule>
    <rule ref="SlevomatCodingStandard.Namespaces.ReferenceUsedNamesOnly.ReferenceViaFullyQualifiedName">
        <exclude-pattern>src/ClassFileLocator.php</exclude-pattern>
        <exclude-pattern>test/ClassFileLocatorTest.php</exclude-pattern>
    </rule>
    <rule ref="Generic.Strings.UnnecessaryStringConcat.Found">
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.TypeHints.NullableTypeForNullDefaultValue.NullabilityTypeMissing">
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="Squiz.Operators.ValidLogicalOperators.NotAllowed">
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.Commenting.DocCommentSpacing.IncorrectAnnotationsGroup">
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.PHP.ShortList.LongListUsed">
        <exclude-pattern>src/ClassFileLocator.php</exclude-pattern>
    </rule>
    <rule ref="WebimpressCodingStandard.Formatting.StringClassReference.Found">
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="PSR12.ControlStructures.ControlStructureSpacing.CloseParenthesisLine">
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="PSR12.ControlStructures.ControlStructureSpacing.FirstExpressionLine">
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
        <exclude-pattern>src/ClassFileLocator.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.Namespaces.UnusedUses.UnusedUse">
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.TypeHints.PropertyTypeHint.MissingAnyTypeHint">
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/ValidatorPluginManager.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/FilterPluginManager.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/AbstractAdapterTestMockAdapter.php</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/HttpTestMockAdapter.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.TypeHints.ParameterTypeHint.MissingAnyTypeHint">
        <exclude-pattern>test/Transfer/Adapter/AbstractAdapterTestMockAdapter.php</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/HttpTestMockAdapter.php</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.ThrowsNotCapital">
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Transfer.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.ThrowsNoFullStop">
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
         <exclude-pattern>src/Transfer/Transfer.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.Namespaces.ReferenceUsedNamesOnly.ReferenceViaFallbackGlobalName">
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
        <exclude-pattern>src/ClassFileLocator.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Transfer.php</exclude-pattern>
        <exclude-pattern>src/PhpClassFile.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/ValidatorPluginManager.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/FilterPluginManager.php</exclude-pattern>
        <exclude-pattern>test/ClassFileLocatorTest.php</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/HttpTestMockAdapter.php</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/AbstractTest.php</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/HttpTest.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.Operators.DisallowEqualOperators.DisallowedEqualOperator">
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
        <exclude-pattern>src/ClassFileLocator.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="Generic.Formatting.MultipleStatementAlignment.NotSame">
        <exclude-pattern>test/Transfer/Adapter/AbstractAdapterTestMockAdapter.php</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/HttpTest.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Transfer.php</exclude-pattern>
        <exclude-pattern>src/ClassFileLocator.php</exclude-pattern>
        <exclude-pattern>test/ClassFileLocatorTest.php</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/AbstractTest.php</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/HttpTestMockAdapter.php</exclude-pattern>
    </rule>
    <rule ref="Squiz.PHP.NonExecutableCode.ReturnNotRequired">
        <exclude-pattern>test/Transfer/Adapter/AbstractAdapterTestMockAdapter.php</exclude-pattern>
    </rule>
    <rule ref="Squiz.Classes.SelfMemberReference.NotUsed">
        <exclude-pattern>test/Transfer/Adapter/HttpTestMockAdapter.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.TypeHints.ReturnTypeHint.MissingAnyTypeHint">
        <exclude-pattern>test/Transfer/Adapter/HttpTestMockAdapter.php</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/AbstractAdapterTestMockAdapter.php</exclude-pattern>
    </rule>
    <rule ref="WebimpressCodingStandard.Arrays.Format.OneElementPerLine">
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
    </rule>
    <rule ref="WebimpressCodingStandard.Arrays.TrailingArrayComma.MissingTrailingComma">
        <exclude-pattern>test/Transfer/Adapter/AbstractAdapterTestMockAdapter.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/AbstractTest.php</exclude-pattern>
    </rule>
    <rule ref="PSR12.Files.FileHeader.SpacingAfterBlock">
        <exclude-pattern>test/_files/locator-should-skip-this.php</exclude-pattern>
    </rule>
    <rule ref="PSR12.Operators.OperatorSpacing.NoSpaceAfter">
        <exclude-pattern>test/ClassFileLocatorTest.php</exclude-pattern>
    </rule>
    <rule ref="WebimpressCodingStandard.Methods.LineAfter.BlankLinesAfter">
        <exclude-pattern>test/Transfer/Adapter/AbstractTest.php</exclude-pattern>
    </rule>
    <rule ref="PSR12.Classes.ClassInstantiation.MissingParentheses">
        <exclude-pattern>test/Transfer/Adapter/AbstractTest.php</exclude-pattern>
    </rule>
    <rule ref="WebimpressCodingStandard.PHP.CorrectClassNameCase.Invalid">
        <exclude-pattern>test/Transfer/Adapter/AbstractTest.php</exclude-pattern>
    </rule>
    <rule ref="Generic.Arrays.ArrayIndent.CloseBraceNotNewLine">
        <exclude-pattern>test/Transfer/Adapter/AbstractTest.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
    </rule>
    <rule ref="WebimpressCodingStandard.Arrays.Format.ClosingBracketInNewLine">
        <exclude-pattern>test/Transfer/Adapter/AbstractTest.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
    </rule>
    <rule ref="WebimpressCodingStandard.WhiteSpace.BlankLine.BlankLine">
        <exclude-pattern>test/Transfer/Adapter/AbstractTest.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.Operators.DisallowEqualOperators.DisallowedNotEqualOperator">
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Transfer.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.Classes.ModernClassNameReference.ClassNameReferencedViaFunctionCall">
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.InvalidNoReturn">
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
    </rule>
    <rule ref="WebimpressCodingStandard.Arrays.DoubleArrow.SpacesBefore">
        <exclude-pattern>src</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/AbstractAdapterTestMockAdapter.php</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/HttpTest.php</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/HttpTestMockAdapter.php</exclude-pattern>
        <exclude-pattern>test/Transfer/Adapter/AbstractTest.php</exclude-pattern>
    </rule>
    <rule ref="WebimpressCodingStandard.Formatting.RedundantParentheses.SingleInstanceOf">
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.ControlStructures.RequireNullCoalesceOperator.NullCoalesceOperatorNotUsed">
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
    </rule>
    <rule ref="Generic.Formatting.MultipleStatementAlignment.Incorrect">
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="Squiz.Strings.ConcatenationSpacing.PaddingFound">
        <exclude-pattern>test/ClassFileLocatorTest.php</exclude-pattern>   
        <exclude-pattern>src/Transfer/Adapter/Http.php</exclude-pattern>
    </rule>
    <rule ref="PSR12.Properties.ConstantVisibility.NotFound">
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.Commenting.RequireOneLinePropertyDocComment.MultiLinePropertyComment">
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
        <exclude-pattern>src/PhpClassFile.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.Commenting.DocCommentSpacing.IncorrectLinesCountBetweenDescriptionAndAnnotations">
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.TypeHints.ParameterTypeHint.UselessAnnotation">
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
    <rule ref="WebimpressCodingStandard.Formatting.RedundantParentheses.MultipleExpression">
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
        <exclude-pattern>src/ClassFileLocator.php</exclude-pattern>
    </rule>
    <rule ref="WebimpressCodingStandard.Strings.NoConcatenationAtTheEnd.ConcatenationAtTheEnd">
        <exclude-pattern>src/Transfer/Adapter/AbstractAdapter.php</exclude-pattern>
    </rule>
</ruleset>
